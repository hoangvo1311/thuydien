    <!-- summernote -->
    <link href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.css">
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/plugins/spin/spin.css" rel="stylesheet" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand ">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a id="navIcon" class="nav-link" data-widget="pushmenu" href="~/#" role="button"><i class="fas fa-bars"></i></a>
                </li>

            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown" style="line-height:0.8">
                    <a class="nav-link" data-toggle="dropdown" href="~/#">
                        @if (WorkContext.CurrentUser == null)
                        {
            <span id="loginButton" style="font-weight:bold; color: white;">LOGIN</span> }
        else
        {
<span style="font-weight:bold; color: white;">@WorkContext.CurrentUser.Username</span>}
                    </a>
                    @if (WorkContext.CurrentUser != null)
                    {
        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
            <span id="signoutBtn" class="dropdown-item dropdown-header">Đăng xuất</span>
        </div>}
                </li>

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="~/" class="brand-link">
                <img src="~/dist/img/Logo.png" alt="Indus-G Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">IndusG Quan Trắc</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item menu-open">
                          
            <li class="nav-item has-treeview menu-open">
                <a href="#" class="nav-link active">
                    <i class="nav-icon fas fa-industry"></i>
                    <p>
                        <!-- TODO: CHANGE PLANT -->
                        ĐăkSrông 3A
                        <i class="right fas fa-angle-left"></i>
                    </p>
                </a>
                <ul class="nav nav-treeview" style="display: block;">
                    <li class="nav-item">
                        <a id="dashboardMenu" href="@Url.Action("Index", "Dashboard")" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Giám Sát
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a id="dataMenu" href="@Url.Action("Index", "Data")" class="nav-link">
                            <i class="nav-icon fas fa-table"></i>
                            <p>
                                Dữ Liệu
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a id="settingMenu" href="@Url.Action("Index", "Setting")" class="nav-link">
                            <i class="nav-icon fas fa-cogs"></i>
                            <p>
                                Cấu Hình
                            </p>
                        </a>
                    </li>
                </ul>
            </li>

                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper" id="pageContent">
                <div>
                    <div style="background-color:lightsteelblue;">
                        <div class="row">
                            <div class="row input-group-append col-lg-6 col-12" style="text-align: center;">
                                @*<div class="col-12" style="font-size: 1.2rem">
                                    <span>CÔNG TY TNHH NHẬT MINH</span>
                                </div>*@
                                <div class="col-12" style="color:red;font-weight:bold;font-size: 1.4rem">
                                    <span>NHÀ MÁY THỦY ĐIỆN @ViewBag.PlantName</span>
                                </div>
                            </div>
                            <div class="input-group-append titleQuanTrac col-lg-6 col-12" style="text-align: center;">
                                <div class="col-12">
                                    <span>@ViewBag.SystemName</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="serviceStopNotification" class="notificationMessage" style="display:none;">
                        "IndusG - Read PLC Service" đang tắt. Vui lòng chạy service lại!
                    </div>
                   
        <div id="plcDisconnectNotification" class="notificationMessage" style="display:none;">
            Kết nối từ PLC đến PC gặp vấn đề. Kiểm tra kết nối và chuyển sang trang cấu hình để kết nối lại!
        </div>


                    <!-- Main content -->
                    <section class="content" style="padding-left: 20px;">
                        <div class="container-fluid">
                            <div id="SuccessMessage" class="message alert alert-success" style="display: none;" role="alert"></div>
                            <div id="WarningMessage" class="message alert alert-warning" style="display: none;" role="alert"></div>
                            @RenderBody()
                        </div>
                        <div class="modal fade" tabindex="-1" id="loginModal"
                             data-keyboard="false" data-backdrop="static">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">ĐĂNG NHẬP</h4>
                                    </div>
                                    <div class="modal-body">
                                        <form id="loginForm">
                                            <div class="input-group mb-3">
                                                <input autofocus class="form-control" required type="text"
                                                       placeholder="Tên đăng nhập" id="UserName" />
                                                <div class="input-group-append">
                                                    <div class="input-group-text">
                                                        <span class="fas fa-user"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="input-group mb-3">
                                                <input class="form-control" required placeholder="Mật khẩu"
                                                       type="password" id="Password" />
                                                <div class="input-group-append">
                                                    <div class="input-group-text">
                                                        <span class="fas fa-lock"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button id="signinBtn" type="button" class="btn btn-primary button button4">Đăng nhập</button>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </section>
                    <!-- /.content -->
                </div>
                <!-- /.content-wrapper -->
                <footer class="new-footer">
                    <strong>Copyright &copy; @DateTime.Now.Year - Indus-G Solutions.</strong>
                    <div class="float-right d-none d-sm-inline-block">
                        <b>Version</b> 1.0.0
                    </div>
                </footer>
                <!-- Control Sidebar -->
                <aside class="control-sidebar control-sidebar-dark">
                    <!-- Control sidebar content goes here -->
                </aside>
                <!-- /.control-sidebar -->
            </div>

            @Scripts.Render("~/bundles/jquery")
            <div style="display: none" id="loading-wrapper">
                <div class="loading">
                    <div id="spinner-preview"></div>
                </div>
            </div>
            @RenderSection("scripts", required: false)

            <!-- ./wrapper -->
            <!-- jQuery UI 1.11.4 -->
            <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
            <script src="~/Scripts/bootbox.min.js"></script>

            <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
            <script>
                $.widget.bridge('uibutton', $.ui.button)
            </script>
            <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
            <script src="~/signalr/hubs"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
            <!-- Sparkline -->
            <script src="~/plugins/sparklines/sparkline.js"></script>
            <!-- JQVMap -->
            <script src="~/plugins/jqvmap/jquery.vmap.min.js"></script>
            <script src="~/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
            <!-- jQuery Knob Chart -->
            <script src="~/plugins/jquery-knob/jquery.knob.min.js"></script>
            <script src="~/plugins/moment/moment.min.js"></script>
            <!-- Tempusdominus Bootstrap 4 -->
            <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
            <!-- Summernote -->
            <script src="~/plugins/summernote/summernote-bs4.min.js"></script>
            <!-- overlayScrollbars -->
            <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
            <!-- AdminLTE App -->
            <script src="~/dist/js/adminlte.js"></script>
            <!-- AdminLTE for demo purposes -->
            <script src="~/dist/js/demo.js"></script>
            <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
            <script src="~/plugins/toastr/toastr.min.js"></script>
            <script src="~/plugins/spin/spin.js"></script>
            <script src="~/Scripts/siteHelper.js"></script>
            <script>

        $(document).ready(function () {
            UpdateServiceStatus();
            setInterval(function () {
                $('#serviceStopNotification').animate({ backgroundColor: 'yellow' }, 500)
                    .animate({ backgroundColor: '#FF6550' }, 500);
                $('#plcDisconnectNotification').animate({ backgroundColor: 'yellow' }, 500)
                    .animate({ backgroundColor: '#FF6550' }, 500);
            }, 200);

            // Reference the auto-generated proxy for the hub.
            var hubProxy = $.connection.notificationHub;
            $.connection.hub.start().done(function () {

            });

            hubProxy.client.notifyServiceStopped = function () {
                $('#serviceStopNotification').show();
                $('#plcDisconnectNotification').hide();
            };

            hubProxy.client.notifyServiceRunning = function () {
                UpdateServiceStatus();
            };

            hubProxy.client.notifyPLCDisconnect = function () {
                $('#plcDisconnectNotification').show();
            };

            //Load spinner
            var spinnerOpts = {
                lines: 13, // The number of lines to draw
                length: 20, // The length of each line
                width: 10, // The line thickness
                radius: 30, // The radius of the inner circle
                corners: 1, // Corner roundness (0..1)
            };

            // show a spinner in place of the icon
            var target = document.getElementById('spinner-preview');
            var spinner = new Spinner(spinnerOpts).spin(target);
            $(target).data('spinner-preview', spinner);


            function UpdateServiceStatus() {
                $.ajax({
                type: "POST",
                url: "@Url.Action("CheckServiceRunning", "ServiceManagement")",
                    success: function (response) {
                    if (response.IsServiceRunning) {
                        $('#serviceStopNotification').hide();
                        if (response.IsPLCAvailable) {
                            $('#plcDisconnectNotification').hide();
                        } else {
                            $('#plcDisconnectNotification').show();
                        }
                    } else {
                        $('#serviceStopNotification').show();
                    }
                },
                error: function () {
                }
                });
            }

            var activeMenu = '@ViewBag.ActiveMenu';
            if (activeMenu == 'Dashboard') {
                $('#dashboardMenu').addClass('active');
            } else if (activeMenu == "Data") {
                $('#dataMenu').addClass('active');
            } else if (activeMenu == "Setting") {
                $('#settingMenu').addClass('active');
            } else if (activeMenu == "IAMO Dashboard") {
                $('#iamoDashboardMenu').addClass('active');
            } else if (activeMenu == "IAMO Setting") {
                $('#iamoSettingMenu').addClass('active');
            }

            $("#loginButton").click(function () {
                $("#loginModal").modal('show');
                $("#loginModal").keypress(function (event) {
                    if (event.keyCode === 13) {
                        $("#signinBtn").click();
                    }
                });
            });

            $('#signoutBtn').click(function () {
                $.ajax({
                        type: "POST",
                        url: "@Url.Action("Logout", "User")",
                        success: function (response) {
                            if (response.Result == true) {
                                location.href = "/";
                            } else {
                                displayErrorAlert(response.Message);
                            }
                        },
                        error: function () {
                        }
                    });
            });

            $("#signinBtn").click(function () {
                var data = { UserName: $('#UserName').val(), Password: $('#Password').val() };
                if ($('#loginForm').valid()) {
                    $.ajax({
                        type: "POST",
                        data: data,
                        url: "@Url.Action("Login", "User")",
                        success: function (response) {
                            if (response.Result == true) {
                                $("#loginModal").modal('hide');
                                bootbox.alert(response.Message, function () {
                                    location.reload();
                                });
                            } else {
                                //bootbox.alert(response.Message);
                                displayErrorAlert(response.Message);
                            }
                        },
                        error: function () {
                        }
                    });
                } else {
                    return false;
                }
            });
        });
            </script>
    </body>
</html>
